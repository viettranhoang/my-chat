<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:weightSum="10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_layout"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_weight="0"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/time_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_profile_layout"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:text="00:00"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/message_image_layout"
        android:layout_width="100dp"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/message_text_left"
        android:layout_marginLeft="0dp"
        android:background="@drawable/image_background"
        android:padding="0dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/message_text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/message_profile_layout"
        android:layout_toRightOf="@+id/message_profile_layout"
        android:background="@drawable/left_background"
        android:padding="10dp"
        android:textColor="#212121"
        android:text="TextView"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/message_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/right_background"
        android:padding="10dp"
        android:textColor="#fff"
        android:text="TextView"
        android:textSize="14sp" />

</RelativeLayout>